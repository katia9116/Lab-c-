Завдання 6
#include <iostream>
using namespace std;

int main() {
    long long c0;
    cin >> c0;

    int steps = 0;

    while (c0 != 1) {
        cout << c0 << endl;   // print current value

        if (c0 % 2 == 0) {
            c0 = c0 / 2;
        } else {
            c0 = 3 * c0 + 1;
        }

        steps++;
    }

    // print the last 1 as well (matches example output)
    cout << 1 << endl;

    cout << "steps = " << steps << endl;

    return 0;
}

ЗАВДАННЯ 7

#include <iostream>
using namespace std;

int main(void) {
    double pi4 = 0.0;
    long n;

    cout << "Number of iterations? ";
    cin >> n;

    // Leibniz series: pi/4 = 1 - 1/3 + 1/5 - 1/7 + ...
    for (long k = 0; k < n; k++) {
        double term = 1.0 / (2 * k + 1);

        if (k % 2 == 0)
            pi4 += term;   // додавання: 1/1, 1/5, 1/9 ...
        else
            pi4 -= term;   // віднімання: 1/3, 1/7, 1/11 ...
    }

    cout.precision(20);
    cout << "Pi = " << (pi4 * 4.0) << endl;

    return 0;
}
ЗАВДАННЯ 10
#include <iostream>
using namespace std;

int main() {
    int n;
    const int MAX_N = 50;   // можна змінити залежно від розміру екрану

    cout << "Enter side length: ";
    cin >> n;

    // 1. Перевірка введення
    if (n <= 1) {
        cout << "Sorry, the side size must be greater than 1" << endl;
        return 0;
    }

    if (n > MAX_N) {
        cout << "Sorry, the side size is too big" << endl;
        return 0;
    }

    // 2. Верхня межа
    cout << '+';
    for (int i = 0; i < n; i++)
        cout << '-';
    cout << '+' << endl;

    // 3. Бічні стінки (порожній простір всередині)
    for (int i = 0; i < n; i++) {
        cout << '|';
        for (int j = 0; j < n; j++)
            cout << ' ';
        cout << '|' << endl;
    }

    // 4. Нижня межа
    cout << '+';
    for (int i = 0; i < n; i++)
        cout << '-';
    cout << '+' << endl;

    return 0;
}
