ЗАДАЧА 6

#include <iostream>
using namespace std;

int main(void) {
    bool answer;
    int value;

    cout << "Enter a value: ";
    cin >> value;

    answer = (value >= 0 && value < 10) ||
              ((value * 2) < 20 && (value - 2) > -2) ||
              ((value - 1) > 1 && (value / 2) < 10) ||
              (value == 111);

    cout << (answer ? "THAT'S TRUE :)" : "THAT'S NOT TRUE :(") << endl;
    return 0;
}
 ЗАДАЧА 7

#include <iostream>
#include <iomanip> // потрібен для setprecision та fixed
using namespace std;

int main() {
    // Вхідні значення
    float a = 2.3;
    float b = 2.3;
    float c = 2.123456;
    float d = 2.123456;
    float e = 2.123456;

    // Вивід у потрібному форматі
    cout << a << endl;                          // 2.3
    cout << fixed << setprecision(2) << b << endl; // 2.30
    cout << fixed << setprecision(6) << c << endl; // 2.123456
    cout << fixed << setprecision(2) << d << endl; // 2.12
    cout << static_cast<int>(e) << endl;        // 2

    return 0;
}



ЗАДАЧА 8
#include <iostream>
#include <cmath> // потрібен для std::fabs
using namespace std;

int main() {
    int num1, num2;
    const float epsilon = 0.000001; // точність порівняння

    cout << "Enter two integer numbers: ";
    cin >> num1 >> num2;

    // Перетворюємо на float перед діленням
    float result1 = 1.0f / num1;
    float result2 = 1.0f / num2;

    // Порівняння з точністю epsilon
    if (fabs(result1 - result2) < epsilon) {
        cout << "Results are equal (by 0.000001 epsilon)" << endl;
    } else {
        cout << "Results are not equal (by 0.000001 epsilon)" << endl;
    }

    return 0;
}


ЗАДАЧА 9
#include <iostream>
using namespace std;

int main() {
    int n1, n2, n3, n4;

    cout << "Enter 4 numbers for IP: ";
    cin >> n1 >> n2 >> n3 >> n4;

    // Перевірка діапазону
    if ((n1 < 1 || n1 > 255) || (n2 < 1 || n2 > 255) || 
        (n3 < 1 || n3 > 255) || (n4 < 1 || n4 > 255)) {
        cout << "Error: numbers must be between 1 and 255" << endl;
        return 1;
    }

    // Вивід у форматі IP
    cout << n1 << "." << n2 << "." << n3 << "." << n4 << endl;

    return 0;
}
